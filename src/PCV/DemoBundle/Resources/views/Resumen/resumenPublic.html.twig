{% extends 'PCVDemoBundle:Plantillas:page.html.twig' %} 
{% block title datosU.name %}

{% block navbar %}
  {% embed 'PCVDemoBundle:Plantillas:pagenav.html.twig' %}
    {% block navbar %}
      {{parent()}}
    {% endblock %}
  {% endembed %}
{% endblock %}

{% block contenido %}

{% if datosD and datosD.bio is not empty %}
<div class="jumbotron" style="background-color:#f5f5f5">
{% else %}
<div class="jumbotron" style="background-color:#fdfdfd">
{% endif %}
  <div class="container">
    {% use 'PCVDemoBundle:Show:portada.html.twig' %}
    {% block portada_public %}
      {{parent()}}
    {% endblock %}
    {% block modal_download_cv %}{{parent()}}{% endblock %}
    {% block modal_share_cv %}{{parent()}}{% endblock %}
  </div>
</div>

{% if datosD and datosD.bio is not empty %}
  <div class="jumbotron" style="background-color:#fff">
