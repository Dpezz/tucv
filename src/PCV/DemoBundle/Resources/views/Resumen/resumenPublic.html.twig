          <h3 class="text-muted"><i class="fa fa-user muted"></i>&nbsp;Datos Personales</h3>
        </div>

      {% use 'PCVDemoBundle:Show:datos.html.twig' %}
      {% block data_public %}
        {{parent()}}
      {% endblock %}
  </div>
</div>
{% endif %}


{% if datosE %}
