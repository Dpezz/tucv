        <div class="page-header" style="border-bottom-color:#ddd">
          <h3 class="text-muted"><i class="fa fa-align-center muted"></i>&nbsp;Resumen</h3>
        </div>

        {% use 'PCVDemoBundle:Show:bio.html.twig' %}
        {% block bio_public %}
          {{parent()}}
        {% endblock %}
    </div>
  </div>
{% endif %}

{% if datosD is not null and (datosD.birthday is not empty or datosD.nationality is not empty or datosD.city is not empty or datosD.address is not empty or datosD.sex is not empty or datosD.status is not empty or datosD.disponible is not empty or datosD.licencia is not empty ) %}
<div class="jumbotron" style="background-color:#f5f5f5">
