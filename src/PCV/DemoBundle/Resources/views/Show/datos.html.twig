{% block data_private %}

	{% block data_public %}
	<div class="row">
		<div class="col-md-10 col-md-offset-2">
			<div class="row">
				<div class="col-md-5">
					{% if datosD and datosD.birthday is not null %}
						{% set meses = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'] %}
						<h4 class="text-muted">
							<span data-toggle="tooltip" data-placement="top" title="Fecha de Nacimiento">
								<i class="fa fa-birthday-cake fa-lg muted"></i>
							</span>
							{{datosD.birthday|date('d')~'-'~meses[datosD.birthday|date('m')-1]~'-'~ datosD.birthday|date('Y')}}
						</h4>
					{% endif %}
				</div>

				<div class="col-md-5">
					{% if datosD and datosD.nationality %}
					<h4 class="text-muted">
						<span data-toggle="tooltip" data-placement="top" title="Nacionalidad">
							<i class="fa fa-globe fa-lg muted"></i>
						</span>
						{{datosD.nationality}}
					</h4>
					{% endif %}
				</div>
			</div>


			<div class="row">
				<div class="col-md-5">
					{% if datosD and datosD.city %}
					<h4 class="text-muted">
						<span data-toggle="tooltip" data-placement="top" title="Comuna">
							<i class="fa fa-map-marker fa-lg muted"></i>
						</span>
						{{datosD.city}}
					</h4>
					{% endif %}
				</div>
				{#}
				<div class="col-md-7">
					{% if datosD and datosD.address %}
					<h4 class="text-muted">
						<span data-toggle="tooltip" data-placement="top" title="Domicilio">
							<i class="fa fa-home fa-lg muted"></i>
						</span>
						{{datosD.address}}
					</h4>
					{% endif %}
				</div>
				#}
			</div>


			<div class="row">
				<div class="col-md-5">
					{% if datosD and datosD.sex %}
					<h4 class="text-muted">
						<span data-toggle="tooltip" data-placement="top" title="Sexo">
							<i class="fa fa-male fa-lg muted"></i>
						</span>
						{{datosD.sex}}
					</h4>		
					{% endif %}
				</div>

				<div class="col-md-5">
					{% if datosD and datosD.status %}
					<h4 class="text-muted">
						<span data-toggle="tooltip" data-placement="top" title="Estado Civil">
							<i class="fa fa-heart fa-lg muted"></i>
						</span>
						{{datosD.status}}
					</h4>		
					{% endif %}
				</div>
			</div>


			<div class="row">
				<div class="col-md-5">
					{% if datosD and datosD.disponible %}
					<h4 class="text-muted">			
						<span data-toggle="tooltip" data-placement="top" title="Disponibilidad Inmediata">
							<i class="fa fa-refresh fa-lg muted "></i>
						</span>
						Disponibilidad Inmediata
					</h4>
					{% endif %}
				</div>

				<div class="col-md-7">
					{% if datosD and datosD.licencia %}
						<h4 class="text-muted">		
							<span data-toggle="tooltip" data-placement="top" title="Licencia Conducir">
								<i class="fa fa-car fa-lg muted"></i>
							</span>
							{{ datosD.licencia }}
						</h4>			
					{% endif %}
				</div>
			</div>

		</div>
	</div>

	{% endblock %}

	{% if datosD %}
		{% if  ( not datosD.birthday)  and ( not datosD.nationality) and ( not datosD.city ) and ( not datosD.address ) and ( not datosD.sex) and ( not datosD.status) and ( not datosD.disponible) and ( not datosD.licencia)  %}
			<h5 class="text-center text-muted">
				<a href="#" data-toggle="modal" data-target="#editData">
					<em><i class="fa fa-plus-circle"></i>&nbsp;agregar datos personales</em>
				</a>
			</h5>
		{% endif %}
	{% else %}
		<h5 class="text-center text-muted">
			<a href="#" data-toggle="modal" data-target="#editData">
				<em><i class="fa fa-plus-circle"></i>&nbsp;agregar datos personales</em>
			</a>
		</h5>
	{% endif %}
		
	
	<div class="btn-group pull-right">
	  	<button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
	    	<i class="fa fa-pencil"></i> <span class="caret"></span>
	  	</button>
	  	<ul class="dropdown-menu" role="menu">
	    	<li><a href="#" data-toggle="modal" data-target="#editData"><i class="fa fa-list-alt"></i> editar Datos</a></li>
	  	</ul>
	</div>

{% endblock %}


{% block modal_data %}
<!-- Modal -->
<div class="modal fade" id="editData" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  	<div class="modal-dialog">
	    <div class="modal-content">
	      	<div class="modal-header">
	        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        	<h4 class="modal-title" id="myModalLabel">Editar Datos Personales</h4>
	      	</div>
	      	<div class="modal-body">
	        	{% use 'PCVDemoBundle:Edit:datos.html.twig' %}
	        	{% block edit_data %}
	        		{{parent()}}
	        	{% endblock %}
	      	</div>
	    </div>
  	</div>
</div>
{% endblock %}
