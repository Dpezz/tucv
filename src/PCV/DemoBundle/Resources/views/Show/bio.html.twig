{% block bio_private %}

	{% block bio_public %}
		<div class="col-md-10 col-md-offset-1">
			<h5 class="text-justify text-muted"><em>
				<i class="fa fa-quote-left fa-2x muted"></i>&nbsp;
				{% if datosD and datosD.bio %}
					{{datosD.bio}}
				{% else %}
					Hola soy {{datosU.name}}...
				{% endif %}
				</em>
			</h5>
		</div>

	{% endblock %}

	<br>
	<div class="btn-group pull-right">
	  	<button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
	    	<i class="fa fa-pencil"></i> <span class="caret"></span>
	  	</button>
	  	<ul class="dropdown-menu" role="menu">
	    	<li><a href="#" data-toggle="modal" data-target="#editBio"><i class="fa fa-pencil-square-o"></i> editar Descripción</a></li>
	  	</ul>
	</div>

{% endblock %}


{% block modal_bio %}
<!-- Modal -->
<div class="modal fade" id="editBio" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  	<div class="modal-dialog">
    	<div class="modal-content">
	      	<div class="modal-header">
        		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        	<h4 class="modal-title" id="myModalLabel">Editar Descripción Personal</h4>
	      	</div>
	      	<div class="modal-body">
	        	{% use 'PCVDemoBundle:Edit:datos.html.twig' %}
	        		{% block edit_bio %}
	        		{{parent()}}
	        	{% endblock %}
	      	</div>
    	</div>
  	</div>
</div>
{% endblock %}